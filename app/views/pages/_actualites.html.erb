<div class="wrapper wrapper-actualites" id="actualites" style="background-image: url('<%= cl_image_path("actualites_pcaclw.png") %>');">
  <div class="wrapper actualites">
    <h2 class="text-center"><%= I18n.t('.title2') %></h2>
    <div class="container" style="padding-top: 20px;">
      <div class="row">
        <% @articles.each do |article|  %>
          <div class="col-lg-3 col-md-6 col-xs-12">
            <div class="card">
              <div class="date">
                <%= article.date.strftime("%d. %m. %Y")%>
              </div>
              <div class="content-card">
                <h4><%= article.title.upcase.tr('æ-ý','Æ-Ý') %></h4>
                <p><%= article.description.first(60) %>...</p>
              </div>
              <%= link_to article_path(article) do %>
              <div class="btn-card">
                Lire la suite
              </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <a href="/articles" style="text-decoration: none;">
      <div class="btn-blog">
        BLOG
      </div>
      </a>
    </div>
  </div>
</div>

