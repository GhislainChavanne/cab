<div class="wrapper actualites" id="actualites" style="background-image: url('<%= image_path('actualites.png') %>');">
  <h2 class="text-center">ACTUALITÉS</h2>
  <p style="color: white;">Retrouvez toutes les actualités du cabinet Chavanne & Witt Avocats</p>
  <div class="container">
    <div class="row">
      <% @articles.each do |article|  %>
        <div class="col-lg-3 col-md-6 col-xs-12">
          <div class="card">
            <div class="date">
              <%= article.date.strftime("%d. %m. %Y")%>
            </div>
            <div class="content-card">
              <h4><%= article.title.upcase.tr('æ-ý','Æ-Ý') %></h4>
              <p><%= article.content.first(60) %>...</p>
            </div>
            <%= link_to article_path(article) do %>
            <div class="btn-card">
              Lire la suite
            </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <a href="/articles">
    <h4 style="color: white; text-align: center; font-weight: lighter; letter-spacing: 2px; font-style: italic;">TOUT</h4>
    </a>
    </div>
</div>

