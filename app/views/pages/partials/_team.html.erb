<section>
  <% I18n.t("team").each.with_index do |(key, value), index| %>
    <figure class="wrapper member" id="<%= key %>">
      <div class="h-full grid grid-cols-12 <%= index.even? ? 'left' : 'right' %>" style="<%= 'background-color: rgba(2, 82, 83, 0.03);' if index.odd? %>">
        <% if index.even? %>
          <div class="lg:hidden col-span-12 h-96 md:h-[35rem] lg:h-96 w-full" 
              style="background-image: url('<%= asset_path(String(value[:image])) %>'); 
                      background-size: cover; 
                      background-position: 50% 35%;">
          </div>
          <%= image_tag String(value[:image]), class: "hidden lg:block crop-right h-full object-cover md:col-span-12 lg:col-span-4 xl:col-span-3 max-h-screen" %>
          <%= render "pages/partials/member", key: key, value: value, index: index %>
        <% else %>
          <div class="lg:hidden col-span-12 h-96 md:h-[35rem] lg:h-96 w-full" 
              style="background-image: url('<%= asset_path(String(value[:image])) %>'); 
                      background-size: cover; 
                      background-position: 50% 35%;">
          </div>
          <%= render "pages/partials/member", key: key, value: value, index: index %>
          <%= image_tag String(value[:image]), class: "hidden lg:block crop-left h-full object-cover md:col-span-12 lg:col-span-4 xl:col-span-3 max-h-screen" %>
        <% end %>
      </div>
    </figure>
  <% end %>
</section> 
