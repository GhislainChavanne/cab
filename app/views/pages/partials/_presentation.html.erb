<section class="wrapper relative mt-4" id="presentation">
  <%= image_tag "siano-icon-white.png", class: "absolute -top-10 -left-10", width: 200 %>

  <div class="grid grid-cols-12">
    <div class="px-12 lg:pe-4 xl:px-24 pt-24 col-span-12 lg:col-span-6 xl:col-span-6">
      <h2 class="niramit-semibold text-3xl heading-border left mb-8"><%= locale_content_for('home.titles.firm') %></h1>

      <p class="montserrat-light lg:text-xs xl:text-sm text-justify py-4">
        <%= locale_content_for('descriptions.firm') %>
      </p>

      <%= render "pages/partials/skills" %>
    </div>


    <div class="px-12 lg:ps-4 xl:pe-24 col-span-12 lg:col-span-6 xl:col-span-6 flex items-center justify-end">
      <%= image_tag "groupe.jpg", class: "object-cover w-full h-full", style: "clip-path: polygon(0 15%, 100% 15%, 100% 100%, 0% 100%); margin-top: -15%;" %>
    </div>
  </div>
</section>
