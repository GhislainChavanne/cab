<div class="wrapper wrapper-contact" style="background-image: url('<%= cl_image_path("img-contact_npehc9.png") %>');">
<div class="contact" id="contact">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="card-contact">
          <h2><%= I18n.t('.title3') %></h2>
            <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
              <%= f.input :nom, :required => true, :placeholder=> I18n.t('.form1'), :error_html => { :id => "name_error"} %>
              <%= f.input :email, :required => true, :placeholder=> I18n.t('.form2'), :error_html => { :id => "name_error"} %>
              <%= f.input :sujet, :required => true, :placeholder=> I18n.t('.form3'), :error_html => { :id => "name_error"}%>
              <div class="textarea text-center">
                <%= f.text_area(:message, placeholder: I18n.t('.form4'))%>
              </div>
              <div class= "hidden">
                <%= f.input :nickname, :hint => 'Leave this field blank!' %>
              </div>
              <div class="btn-form text-center">
                <%= f.button :submit, "", :value => I18n.t('.form5'), :class => "btn-details"%>
              </div>
            <% end %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card-contact">
          <h4 class="text-center" style=" padding-top: 35px; padding-bottom: 20px"><span style="font-weight: 700;">
          CHAVANNE & WITT Avocats</span></h4>
          <h5>132 boulevard du Montparnasse<br>75014 Paris</h5>
          <h5>
          <strong>Tel</strong> : <span style="font-family: 'Roboto', sans-serif;">01 42 18 18 19</span> <br>
          <strong>Fax</strong> : <span style="font-family: 'Roboto', sans-serif;">01 77 75 91 91</span> <br>
          <strong>Email</strong> : contact@cw-avocats.com <br> <strong>Toque</strong> : <span style="font-family: 'Roboto', sans-serif;">A0431</span></h5>
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2625.902465707523!2d2.329843215673745!3d48.84099907928577!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e671c60213f133%3A0x7d8eddb103caf379!2s132+Boulevard+du+Montparnasse%2C+75014+Paris!5e0!3m2!1sfr!2sfr!4v1508402153589" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
