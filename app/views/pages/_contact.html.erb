<section class="wrapper wrapper-contact" id="contacts" style="background-image: url('<%= cl_image_path("img-contact_npehc9.png") %>');">
  <div class="contact" id="contact">
    <div class="container">
      <div class="card-contact">
        <div class="row">
          <div class="col-sm-12 col-md-6">
          </div>
          <div class="col-sm-12 col-md-6 contact-form">
            <h2><%= locale_content_for("home.titles.contact") %></h2>
            <div>
              <h5 class="text-center" style=" padding-top: 24px">
                <span style="font-weight: 700;">
                  <em>Chavanne & Witt Avocats</em>
                </span> <br>
                FR: 49 rue Saint-Roch, 75001 Paris <br>
                ES: Calle Balmes 222, 4° 1°08006 Barcelone
              </h5>
              <h5><strong>Tel</strong> : 01 42 18 18 19 <strong>- Fax</strong> : 01 77 75 91 91<br>
              <strong>Email</strong> : contact@cw-avocats.com <br> <strong>Toque</strong> : A431</h5>

              <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
                <%= f.input :nom, required: true, placeholder: locale_content_for("form.placeholders.name"), error_html: { id: "name_error" } %>
                <%= f.input :email, required: true, placeholder: locale_content_for("form.placeholders.email"), error_html: { id: "name_error" } %>
                <%= f.input :sujet, required: true, placeholder: locale_content_for("form.placeholders.subject"), error_html: { id: "name_error" } %>

                <div class="textarea text-center">
                  <%= f.text_area(:message, placeholder: locale_content_for("form.placeholders.message")) %>
                </div>

                <div class= "hidden">
                  <%= f.input :nickname, :hint => 'Leave this field blank!' %>
                </div>

                <div class="btn-form text-center">
                  <%= f.button :submit, "", value: locale_content_for("form.placeholders.submit"), class: "btn-details"%>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="avatar avatar-contact" style="margin-bottom: 0px">
  <%= image_tag "clem-mat-mobile.png" %>
</div>
